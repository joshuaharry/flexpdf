{
  "name": "embed-annotations",
  "version": "1.0.0",
  "description": "A flexible solution for adding annotations on top of a PDF document.",
  "scripts": {
    "start": "vite",
    "test": "jest",
    "build": "tsup src/index.tsx --dts",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "author": "Joshua Hoeflich",
  "license": "MIT",
  "dependencies": {
    "@adobe/react-spectrum": "^3.24.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.6",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitejs/plugin-react": "^3.0.1",
    "eslint": "^8.32.0",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "nanobundle": "^1.2.2",
    "prettier": "^2.8.3",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.0.5",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": "./dist/index.js",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --max-warnings=0 --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0
    }
  }
}
